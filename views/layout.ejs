<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Blog</title>

  <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>

  <!-- Bootstrap -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>

  <!-- Font Awesome -->
  <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">

  <!-- Favicon -->
  <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">
  <link rel="icon" href="/favicon.ico" type="image/x-icon">

  <link rel='stylesheet' href='/stylesheets/style.css' />

  <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
  <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
  <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
      <![endif]-->
</head>

<body>
  <!-- Header -->
  <nav class="navbar navbar-default navbar-fixed-top">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="/">Blog</a>
      </div>
      <div id="navbar" class="collapse navbar-collapse">
        <% if(session.user){ %>
        <ul class="nav navbar-nav">
          <li><a href="/posts">Posts</a></li>
        </ul>
        <% } %>
        <% if(session.user && session.user.isAdmin == true){ %>
        <ul class="nav navbar-nav">
          <li><a href="/users">Usuarios</a></li>
        </ul>
        <% } %>
        <ul class="nav navbar-nav navbar-right">
          <% if(!session.user){ %>
              <li><a href="/login">Login</a></li>
              <li><a href="/signup">Registrarse</a></li>
          <% } else { %>
              <li><a href="/users/<%=session.user.id %>"><%=session.user.name %></a>
              <li><a href="/logout">Logout</a></li>
          <% } %>
        </ul>
      </div>
    </div>
  </nav>
  <!-- Main -->
  <section class="container">
    <!-- Alerts -->
    <% if (messages.error) { %>
      <div class="alert alert-danger">
        <% for (var i in messages.error) { %>
          <span>
            <%= messages.error[i] %>
          </span>
          <br/>
          <% } %>
      </div>
      <% } %>
      <% if (messages.info) { %>
        <div class="alert alert-info">
          <% for (var i in messages.info) { %>
            <span>
              <%= messages.info[i] %>
            </span>
            <br/>
            <% } %>
        </div>
        <% } %>
        <% if (messages.success) { %>
          <div class="alert alert-success">
            <% for (var i in messages.success) { %>
              <span>
                <%= messages.success[i] %>
              </span>
              <br/>
              <% } %>
          </div>
          <% } %>
          <!-- Body -->
          <%- body %>
  </section>
  <!-- Footer -->
  <footer class="footer navbar navbar-fixed-bottom">
    <div class="container">
      <ul class="list-inline">
        <li>
          <a href="https://github.com/JorgeBailo/blog" target="_blank">
            <i class="fa fa-github"></i>&nbsp;GitHub
          </a>
        </li>
      </ul>
    </div>
  </footer>
</body>

</html>
