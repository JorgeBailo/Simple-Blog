<% var popular_tags = [] %>
<% var i; for (i=0; i < posts.length; i++) { %>
  <div class="col-lg-6">
    <h3>
      <a href="/posts/<%= posts[i].id%>">
        <%= posts[i].title %>
      </a>
    </h3>
    <p><i class="fa fa-calendar"></i>
      <%= moment(posts[i].createdAt).format("DD-MM-YYYY HH:mm") %>
    </p>
    <p><i class="fa fa-user"></i>
      <%= posts[i].Author.name %>
    </p>
    <% if (posts[i].tags.length > 0) { %>
        <p><i class="fa fa-tags"></i> Tags:
          <% var j; for (j in posts[i].tags) { %>
            <a href="/tags/<%= escape(posts[i].tags[j].trim())%>"><span class="badge badge-info"><%= posts[i].tags[j].trim() %></span></a>
            <% if (popular_tags.indexOf(posts[i].tags[j].trim()) == -1) popular_tags[popular_tags.length] = posts[i].tags[j].trim() %>
          <% } %>
        </p>
      <% } %>
    <hr>
  </div>
<% } %>
<div class="row">
  <div class="col-lg-12">
    <div class="col-lg-6">
       <h4><i class="fa fa-tags"></i> Popular Tags:</h4>
       <% for (var k in popular_tags) { %>
         <a href="/tags/<%= encodeURIComponent(popular_tags[k]) %>/"><span class="badge badge-info"><%= popular_tags[k] %> %></span></a>
      <% } %>
    </div>
    <div class="col-lg-6">
       <h4><i class="fa fa-search"></i> Buscar:</h4>
       <form action="/" method="GET">
  			<div class="input-group">
  				<input type="text" name="search" class="form-control" placeholder="Buscar...">
  				<span class="input-group-btn">
  					<button class="btn btn-default" type="submit">
  						<i class="glyphicon glyphicon-search"></i>
  					</button>
  				</span>
  			</div>
  		</form>
    </div>
  </div>
</div>
